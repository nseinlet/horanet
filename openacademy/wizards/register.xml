<openerp><data>
		 <record model="ir.ui.view" id="register_form_view">
            <field name="name">register.form</field>
            <field name="model">openacademy.register</field>
            <field name="arch" type="xml">
                <form string="Add Attendees">
                    <group>
                    	<field name="state" invisible="1"/>
                        <field name="session_ids" states="1"/>
                        <field name="attendee_ids"  states="2"/>
                    </group>
                    <footer>
                    	<button type="object" name="go_step1" String="Previous" states="2"/>
                    	<button type="object" name="go_step2" String="Next" class="oe_highlight" states="1"/>
                    	<button type="object" name="validate" String="Validate" class="oe_highlight" states="2"/>
                    	or
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="launch_session_wizard"
                    name="Add Attendees"
                    src_model="openacademy.session"
                    res_model="openacademy.register"
                    view_mode="form"
                    target="new"
                    key2="client_action_multi"/>
</data></openerp>