<openerp>
	<data>
		<!-- Form --> 
		<record model='ir.ui.view' id="session_form">
			<field name="name">Session Form</field>
			<field name="model">openacademy.session</field>
			<field name="arch" type="xml">
				<form string="Session form">
					<header>
						<button type="workflow" name="draft" string="Draft" states="confirmed,done"/>
						<button type="workflow" name="confirm" string="Confirmed" states="draft"/>
						<button type="workflow" name="done" string="Done" states="confirmed"/>
						
						<field name="state" widget="statusbar"/>
					</header>
					<sheet>
						<group col="2">
							<group col="2">
								<field name="name"/>
								<field name="course_id" options="{'no_quick_create': True, 'no_create': True}" required="True"/>
								<field name="seats"/>
								<field name="taken_seats" widget="progressbar"/>
								<field name='instructor_id' context="{'default_instructor': True}"/>
								<field name="country_id"/>	
							</group>
							<group col="1">
								<separator string="Schedule"/>
								<group col="2">
									<field name="active"/>	
									<field name="start_date"/>
									<field name="duration"/>
									<field name="end_date"/>
								</group>
							</group>
						</group>
						<notebook>
							<page string="Attendees">
								<field name="attendee_ids"/>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>
		<!-- Tree -->
		<record model='ir.ui.view' id="session_tree">
			<field name="name">Session Tree</field>
			<field name="model">openacademy.session</field>
			<field name="arch" type="xml">
				<tree decoration-info="duration&lt;5" decoration-danger="duration&gt;15">
					<field name="name"/>
					<field name="course_id"/>
					<field name="duration" invisible="1"/>
					<field name="taken_seats" widget="progressbar"/>
				</tree>
			</field>
		</record>
		
		<!-- Calendar -->
		<record model='ir.ui.view' id="session_calendar">
			<field name="name">Session Calendar</field>
			<field name="model">openacademy.session</field>
			<field name="arch" type="xml">
				<calendar string="Sessions" date_start="start_date" date_stop="end_date" color="course_id">
    				<field name="name"/>
				</calendar>
			</field>
		</record>
		
		<!-- Search -->
		<record model='ir.ui.view' id="session_search">
			<field name="name">Session Search</field>
			<field name="model">openacademy.session</field>
			<field name="arch" type="xml">
				<search>
					<field name='name'/>
					<field name='course_id'/>
					<filter name="my_courses" string="My Courses"
            			domain="[('course_id.responsible_id', '=', uid)]"/>
            		<group string="Group By">
				        <filter name="group_by_instructor" string="Instructor"
				                context="{'group_by': 'instructor_id'}"/>
				        <filter name="group_by_course" string="Course"
				                context="{'group_by': 'course_id'}"/>
				    </group>
				</search>
			</field>
		</record>
		
		<!-- Gantt -->
		<record model="ir.ui.view" id="session_gantt_view">
            <field name="name">session.gantt</field>
            <field name="model">openacademy.session</field>
            <field name="arch" type="xml">
                <gantt string="Session Gantt" color="course_id" date_start="start_date" date_delay="hours" default_group_by='instructor_id'>
                    <field name="name"/>
                </gantt>
            </field>
        </record>
		
		<!-- Graph -->
		<record model="ir.ui.view" id="session_graph_view">
            <field name="name">session.graph</field>
            <field name="model">openacademy.session</field>
            <field name="arch" type="xml">
                <graph type="pie">
                	<field name="course_id"/>
                	<field name="seats" type="measure"/>
                </graph>
            </field>
        </record>
        
        <!-- Pivot -->
		<record model="ir.ui.view" id="session_pivot_view">
            <field name="name">session.pivot</field>
            <field name="model">openacademy.session</field>
            <field name="arch" type="xml">
                <pivot>
                	<field name="course_id" type="row"/>
                	<field name="instructor_id" type="col"/>
                	<field name="seats" type="measure"/>
                </pivot>
            </field>
        </record>
        
        <!-- kanban -->
        <record model="ir.ui.view" id="view_openacad_session_kanban">
            <field name="name">openacad.session.kanban</field>
            <field name="model">openacademy.session</field>
            <field name="arch" type="xml">
                <kanban default_group_by="course_id">
                    <field name="color"/>
                    <field name="priority"/>
                    <templates>
                        <t t-name="kanban-box">
                        	<t t-debug="1"/>
                            <div
                                    t-attf-class="oe_kanban_color_{{kanban_getcolor(record.color.raw_value)}}
                                                  oe_kanban_global_click_edit oe_semantic_html_override
                                                  oe_kanban_card {{record.group_fancy==1 ? 'oe_kanban_card_fancy' : ''}}">
                                <div class="oe_dropdown_kanban">
                                    <!-- dropdown menu -->
                                    <div class="oe_dropdown_toggle">
                                        <i class="fa fa-bars fa-lg"/>
                                        <ul class="oe_dropdown_menu">
                                            <li>
                                                <a type="delete">Delete</a>
                                            </li>
                                            <li>
                                                <ul class="oe_kanban_colorpicker"
                                                    data-field="color"/>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="oe_clear"></div>
                                </div>
                                <div t-attf-class="oe_kanban_content">
                                    <!-- title -->
                                    Session name:
                                    <field name="name"/>
                                    <br/>
                                    Start date:
                                    <field name="start_date"/>
                                    <br/>
                                    duration:
                                    <field name="duration"/>
                                    <br/>
                                    <field name="priority" widget="priority"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
        
        <!-- kanban 2 -->
        <record model="ir.ui.view" id="view_openacad_session_kanban2">
            <field name="name">openacad.session.kanban</field>
            <field name="model">openacademy.session</field>
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <kanban default_group_by="instructor_id">
                    <field name="color"/>
                    <field name="priority"/>
                    <templates>
                        <t t-name="kanban-box">
                        	<t t-debug="1"/>
                            <div
                                    t-attf-class="oe_kanban_color_{{kanban_getcolor(record.color.raw_value)}}
                                                  oe_kanban_global_click_edit oe_semantic_html_override
                                                  oe_kanban_card {{record.group_fancy==1 ? 'oe_kanban_card_fancy' : ''}}">
                                <div class="oe_dropdown_kanban">
                                    <!-- dropdown menu -->
                                    <div class="oe_dropdown_toggle">
                                        <i class="fa fa-bars fa-lg"/>
                                        <ul class="oe_dropdown_menu">
                                            <li>
                                                <a type="delete">Delete</a>
                                            </li>
                                            <li>
                                                <ul class="oe_kanban_colorpicker"
                                                    data-field="color"/>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="oe_clear"></div>
                                </div>
                                <div t-attf-class="oe_kanban_content">
                                    <!-- title -->
                                    Session name:
                                    <field name="name"/>
                                    <br/>
                                    Start date:
                                    <field name="start_date"/>
                                    <br/>
                                    duration:
                                    <field name="duration"/>
                                    <br/>
                                    <field name="priority" widget="priority"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
	</data>
</openerp>