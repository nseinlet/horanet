<openerp>
	<data>
		<record model="ir.ui.view" id="res_partner_instructor">
			<field name="name">Res partner instructor</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="base.view_partner_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='website']" position="after">
					<field name="instructor"/>
				</xpath>
				<xpath expr="//page[@name='internal_notes']" position="after">
					<page name="sessions" string="sessions" attrs="{'invisible': [('instructor', '=', False)]}">
						<group col="1">
							<field name="session_ids"/>
						</group>
					</page>
					<page name="Horanet" string="Horanet">
						<group col="4">
						<field name="type_entite"/>
						<field name="statut_entite_id" attrs="{'invisible': ['!', ('type_entite', '=', 'mo')]}"/>
						</group>
					</page>
					<page name="roles_moraux" string="Roles moraux" attrs="{'invisible': ['!', ('type_entite', '=', 'mo')]}">
						<group col="1">
							<field name="role_mo_ids">
								<tree editable="bottom">
									<field name="partner_phy_id"/>
									<field name="role_id"/>
									<field name="status_id"/>
									<field name="start_date"/>
									<field name="end_date"/>
								</tree>
							</field>
						</group>
					</page>
					<page name="roles_phy" string="Roles physiques" attrs="{'invisible': ['!', ('type_entite', '=', 'phy')]}">
						<group col="1">
							<field name="role_phy_ids">
								<tree editable="bottom">
									<field name="partner_mo_id"/>
									<field name="role_id"/>
									<field name="status_id"/>
									<field name="start_date"/>
									<field name="end_date"/>
								</tree>
							</field>
						</group>
					</page>
				</xpath>
			</field>
		</record>
	</data>
</openerp>