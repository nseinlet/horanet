<openerp>
	<data>
		<record model='ir.ui.view' id="course_form">
			<field name="name">Course Form</field>
			<field name="model">openacademy.course</field>
			<field name="arch" type="xml">
				<form string="Course form">
					<sheet>
						<div class="oe_button_box" name="button_box">
	                        <button class="oe_stat_button" type="object" name="sessions_list" icon="fa-list">
		                     	<field name="nbr_sessions" string="Sessions" widget="statinfo"/>
		                    </button>
		                    <button class="oe_stat_button" type="object" name="sessions_list">
		                     	<field name="prc_sessions" string="Sessions" widget="percentpie"/>
		                    </button>
	                    </div>
                    
						<group>
							<h1><field name="name"/></h1>
							<field name="responsible_id"/>
						</group>
						<notebook>
							<page string="Description">
								<group col="1">
									<field name="description" nolabel="1"/>
								</group>
							</page>
							<page string="Sessions">
								<group col="1">
									<field name="session_ids">
										<tree>
											<field name="name"/>
											<field name="start_date"/>
										</tree>
									</field>
								</group>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>
		
		<record model='ir.ui.view' id="course_search">
			<field name="name">Course search</field>
			<field name="model">openacademy.course</field>
			<field name="arch" type="xml">
				<search>
					<field name="name"/>
					<field name="description"/>
				</search>
			</field>
		</record>
	</data>
</openerp>
