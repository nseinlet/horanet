<openerp>
    <data>
    	<template id="helloworld">
    		<t t-call="website.layout">
                <t t-set="title">Academy</t>
                <div class="oe_structure">
                    <div class="container">
                    <h1><span t-esc="nomrecu"/></h1>
                    	<div class="row">
                    	<table class="table">
                    	<tbody>
			    		<t t-foreach="mysessions" t-as="mysession">
			    			<tr>
			    			<td><a t-attf-href="/openacademy/openacademy/{{slug(mysession)}}/"><span t-esc="mysession.name"/></a></td>
			    			<td t-esc="mysession.course_id.name"/>
			    			<td t-esc="mysession.instructor_id.name"/>
			    			</tr>
			    		</t>
			    		</tbody>
			    		</table>
			    		</div>
			    	</div>
			    </div>
    		</t>
    	</template>
    	
    	<template page="True" id="website.monopage1" name="monopage1">
    		<t t-call="website.layout">
                <t t-set="title">Academy</t>
                <div class="oe_structure">
                    <div class="container">
						<h1>Contenu de la page1</h1>
		 			</div>
		 		</div>
		 	</t>	
	    </template>
	    
	    <record id="openacademy-menu" model="website.menu">
            <field name="name">OpenAcademy</field>
            <field name="url">/openacademy/openacademy</field>
            <field name="parent_id" ref="website.main_menu" />
            <field name="sequence" type="int">3</field>
        </record>
        
	    <record id="mono-menu" model="website.menu">
            <field name="name">Monopage</field>
            <field name="url">/page/monopage1</field>
            <field name="parent_id" ref="website.main_menu" />
            <field name="sequence" type="int">5</field>
        </record>
        
