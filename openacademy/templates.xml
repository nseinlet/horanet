        <template id="object">
            <t t-call="website.layout">
                <t t-set="title">Academy</t>
                <div class="oe_structure">
                    <div class="container">
			          <table>
			          	<tr>
			          		<td>Nom</td>
			          		<td><span t-field="object.name"/></td>
